@using DoReMusic.Domain.Entities;

@model Cart


<div class="container mt-3">
    <h2>Shopping Cart</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Instrument</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Instrument.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@item.TotalCartPrice</td>
                </tr>
            }
        </tbody>
    </table>
</div>
