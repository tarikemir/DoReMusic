@using DoReMusic.Domain.Entities;
@model Category

@{
    ViewData["Title"] = "Update Category";
}

<!DOCTYPE html>
<html>
<head>
    <title>Update Category</title>
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        /* Container Styles */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Form Styles */
        form {
            padding: 20px;
        }

        /* Form Group Styles */
        .form-group {
            margin-bottom: 20px;
        }

        /* Label Styles */
        label {
            font-weight: bold;
            color: #333;
        }

        /* Input and Select Styles */
        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        /* Button Styles */
        .btn {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            /* Button Hover Styles */
            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Update Category</h2>
        <form asp-action="UpdateCategory" method="post">
            <input type="hidden" value="@Model.Id" class="form-control" name="Id" />
            <div class="form-group">
                <label for="Name">Category Name:</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Details">Details:</label>
                <input type="text" class="form-control" id="Details" name="Details" value="@Model.Details" />
            </div>
            <div class="form-group">
                <label for="Kinds">Kinds:</label>
                <select class="form-control" id="Kinds" name="Kinds" multiple>
                    @foreach (var kind in Model.Kinds)
                    {
                        <option value="@kind" selected>@kind</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>

        </form>
    </div>
</body>
</html>
