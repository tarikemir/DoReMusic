@using DoReMusic.Domain.Entities;
@model List<Instrument>

<!DOCTYPE html>
<html>
<head>
    <title>List of Instruments</title>
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        /* Container Styles */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ccc;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>List of Instruments</h2>
        <table>
            <tr>
                <th><a href="@Url.Action("InstrumentsOfKind", "Instruments", new { category = @Model.FirstOrDefault().Category.Name, kind = @Model.FirstOrDefault().Kind, sort = "alphabetic" })">Name</a></th>
                <th><a href="@Url.Action("InstrumentsOfKind", "Instruments", new { category = @Model.FirstOrDefault().Category.Name, kind = @Model.FirstOrDefault().Kind, sort = "ascendingbyprice" })">Price Asc</a></th>
                <th><a href="@Url.Action("InstrumentsOfKind", "Instruments", new { category = @Model.FirstOrDefault().Category.Name, kind = @Model.FirstOrDefault().Kind, sort = "descendingbyprice" })">Price Desc</a></th>
            </tr>
            @foreach (var instrument in Model)
            {
                <tr>
                    <td>@instrument.Name</td>
                    <td>@instrument.Price</td>
                    <td>@instrument.Price</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
