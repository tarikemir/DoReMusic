@using DoReMusic.Domain.Entities
@model List<Instrument>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            text-align: center;
            padding: 20px;
        }

        h2 {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            border-radius: 5px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .btn {
            padding: 8px 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

        .sort-button {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            margin: 2px;
        }

        .sort-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h2>Instruments</h2>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Kind</th>
                <th>Model</th>
                <th>Color</th>
                <th>Production Year</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <a class="sort-button" href="@Url.Action("Index", "Instruments", new { category = @Model.FirstOrDefault().Category.Name, kind = @Model.FirstOrDefault().Kind, sort = "alphabetic" })">Name</a>
            <a class="sort-button" href="@Url.Action("Index", "Instruments", new { category = @Model.FirstOrDefault().Category.Name, kind = @Model.FirstOrDefault().Kind, sort = "ascendingbyprice" })">Price Asc</a>
            <a class="sort-button" href="@Url.Action("Index", "Instruments", new { category = @Model.FirstOrDefault().Category.Name, kind = @Model.FirstOrDefault().Kind, sort = "descendingbyprice" })">Price Desc</a>

            @foreach (var instrument in Model)
            {
                <tr>
                    <td>@instrument.Name</td>
                    <td>@instrument.Brand.Name</td>
                    <td>@instrument.Category.Name</td>
                    <td>@instrument.Kind</td>
                    <td>@instrument.Model</td>
                    <td>@instrument.Color</td>
                    <td>@instrument.ProductionYear</td>
                    <td>@instrument.Price</td>
                    <td>
                        <a asp-action="UpdateInstrument" asp-route-id="@instrument.Id" class="btn btn-primary">Update</a>
                        <a asp-action="DeleteInstrument" asp-route-id="@instrument.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
